<h1><%= @post.title %></h1>
<br>
<p><%= @post.content %></p>
<br>
<h3>Comments:</h3>
<br>
<% @post.comments.each do |c| %>
<p><%= c.content %></p>
<% end %>
<br>
<h3>Users:</h3>
<br>
<% @post.users.each do |u| %>
<p><%= u.username %></p>
<% end %>
<br>
<%= form_for @post do |f| %>
<%= f.hidden_field :post_id, value: @post.id %>
<%= f.collection_select :users, User.all, :id, :username %>
<%= f.fields_for :users, @post.users.build do |users_fields| %>
<%= users_fields.text_field :username %>
<% end %>
<%= f.fields_for :comments, @post.comments.build do |comments_fields| %>
<%= comments_fields.text_area :content %>
<% end %>
<%= f.submit %>
<% end %>
